{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "@cloudflare/workers-types",
      "@types/jest",
      "node"
    ]
  },
  "include": ["src"],
  "exclude": ["test"]
}
